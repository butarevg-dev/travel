rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /poi/{id} {
      allow read: if true; // public read
      allow write: if false; // managed by admins only
    }
    match /routes/{id} {
      allow read: if true; // public read
      allow write: if false;
    }
    match /reviews/{id} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // moderation via functions
    }
    match /questions/{id} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    match /users/{id} {
      allow read, write: if request.auth != null && request.auth.uid == id;
    }
    match /badges/{id} { allow read: if true; allow write: if false; }
    match /quests/{id} { allow read: if true; allow write: if false; }
  }
}